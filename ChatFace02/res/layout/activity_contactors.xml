<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="2"
        android:background="@drawable/contactorlayout_bg"
        android:orientation="vertical" >

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#142514"
            android:paddingBottom="5dip">
            <ImageButton 
                android:id="@+id/newContactorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/newcontactorbutton_bg"
                android:src="@drawable/newcontactor"
                android:onClick="newFriendListsOnclick"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>
            <EditText 
                android:id="@+id/seekEdit_contactors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dip"
                android:layout_toRightOf="@id/newContactorButton"/>
        </RelativeLayout>
        <ListView 
            android:id="@+id/contactorsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scrollingCache="true"
            android:alwaysDrawnWithCache="true"
            android:drawingCacheQuality="auto"
            android:cacheColorHint="@color/transparent">
            
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"       
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/historyButton_contactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundbutton"
            android:text="通话记录"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/contactorsButton_contactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundbutton"
            android:text=" 通 信 录 "
            android:textSize="25sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/msgButton_contactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundbutton"
            android:text=" 留    言  "
            android:textSize="25sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/otherfunButton_contactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/roundbutton"
            android:text="附加功能"
            android:textSize="25sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>