<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:layout_weight="2"
        android:background="@drawable/voice_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:src="@drawable/video_invitation" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/invitateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="向你发起视频电话"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/yesInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:drawableLeft="@drawable/yes"
            android:onClick="inviteOnclick"
            android:text="接受"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/noInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:drawableLeft="@drawable/no"
            android:onClick="inviteOnclick"
            android:text="拒绝"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>