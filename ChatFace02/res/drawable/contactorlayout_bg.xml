<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="#0D3E0D" android:endColor="#1E1E1E" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#00688B" /> 
            <corners android:radius="2dp" /> 
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="8dp" /> 
        </shape> 
    </item> 
  
    <item android:state_focused="true"> 
        <shape> 
            <gradient android:startColor="#0D3E0D" android:endColor="#1E1E1E" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#00688B" /> 
            <corners android:radius="2dp" /> 
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="8dp" /> 
        </shape> 
    </item> 
  
    <item> 
        <shape> 
            <gradient android:startColor="#0D3E0D" android:endColor="#1E1E1E" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#3A3A3A" /> 
            <corners android:radius="2dip" /> 
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="8dp" /> 
        </shape> 
    </item> 
</selector>