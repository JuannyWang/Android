<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item android:state_pressed="true"> 
        <shape> 
            <gradient android:startColor="#00688B" android:endColor="#00688B" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#00688B" /> 
            <corners android:radius="1dp" /> 
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
  
    <item android:state_focused="true"> 
        <shape> 
            <gradient android:startColor="#00C5CD" android:endColor="#00688B" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#00688B" /> 
            <corners android:radius="1dp" /> 
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
  
    <item> 
        <shape> 
            <gradient android:startColor="#DFDDDE" android:endColor="#949494" android:angle="270" /> 
            <stroke android:width="1dip" android:color="#696969" /> 
            <corners android:radius="1dip" /> 
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
</selector>