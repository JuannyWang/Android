<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_liner"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ToggleButton
        android:id="@+id/ToggleButton01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="打开背面剪裁"
        android:textOn="关闭背面剪裁" >
    </ToggleButton>

    <ToggleButton
        android:id="@+id/ToggleButton02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="打开平滑着色"
        android:textOn="关闭平滑着色" >
    </ToggleButton>

    <ToggleButton
        android:id="@+id/ToggleButton03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checked="false"
        android:textOff="打开自定义卷绕"
        android:textOn="使用默认卷绕" >
    </ToggleButton>

</LinearLayout>